<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/immersive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_eeeeee"
    tools:context=".function.ui.AdminSetActivity">

    <include
        android:id="@+id/include"
        layout="@layout/include_title"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/admin_function_bg_shape"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="11dp"
            android:text="@string/add_user"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:text="@string/add_user_msg"
            android:textColor="@color/gray_888888"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_receive_username"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:hint="@string/add_account"
            android:paddingLeft="8dp"
            android:textColor="@color/black_333333"
            android:textColorHint="@color/gray_b5b5b5"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_add_user_bind"
            android:layout_width="240dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/admin_set_btn_shape"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/admin_function_bg_shape"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="11dp"
            android:text="@string/get_auth_code"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:text="@string/get_auth_code_msg"
            android:textColor="@color/gray_888888"
            android:textSize="12sp"/>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_auth_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="37dp"
                android:textColor="@color/colorAccent"
                android:textSize="19sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_get_auth_code"
                android:layout_width="240dp"
                android:layout_height="34dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/admin_set_btn_shape"
                android:gravity="center"
                android:text="@string/get_auth_code"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </FrameLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>